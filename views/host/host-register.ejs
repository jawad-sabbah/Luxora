<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Become a Host - Luxora</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-blue-600">Luxora</a>
      <nav>
        <a href="/" class="mx-3 text-gray-700 hover:text-blue-600">Home</a>
        <a href="/hotels" class="mx-3 text-gray-700 hover:text-blue-600">Hotels</a>
        <a href="/about" class="mx-3 text-gray-700 hover:text-blue-600">About</a>
        <a href="/contact" class="mx-3 text-gray-700 hover:text-blue-600">Contact</a>
        <% if (Data.user) { %>
          <a href="/logout" class="mx-3 text-red-600 hover:underline font-semibold">Logout</a>
        <% } else { %>
          <a href="/login" class="mx-3 text-gray-700 hover:text-blue-600">Login</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- Host Registration Form -->
  <main class="flex-grow">
    <div class="max-w-2xl mx-auto mt-12 bg-white shadow-lg rounded-xl p-10">
      <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Register as a Host</h1>

      <% if (Data.error) { %>
        <p class="bg-red-100 text-red-600 p-3 rounded mb-4"><%= error %></p>
      <% } %>

      <form action="/registerHost" method="POST" class="space-y-6">

        <!-- Phone Number -->
        <div>
          <label class="block font-semibold text-gray-700 mb-2">Phone Number</label>
          <input type="text" name="phone_number" placeholder="+961"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2" required>
        </div>

        <!-- Payout Email -->
        <div>
          <label class="block font-semibold text-gray-700 mb-2">PayPal </label>
          <input type="email" name="payout_email"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2" required>
        </div>

        <!-- Bank Account (Optional) -->
        <div>
          <label class="block font-semibold text-gray-700 mb-2">Bank Account (Optional)</label>
          <input type="text" name="bank_account" class="w-full border border-gray-300 rounded-lg px-4 py-2">
        </div>

        <!-- Terms & Conditions -->
        <div class="flex items-center">
          <input type="checkbox" name="terms" required class="mr-2">
          <label class="text-gray-700">I agree to the Host Terms & Conditions</label>
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit"
                  class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
            Register as Host
          </button>
        </div>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white shadow mt-auto">
    <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-500 text-sm">
      Â© <%= new Date().getFullYear() %> Luxora. All rights reserved.
    </div>
  </footer>

</body>
</html>

<script>
  fetch('/check-session')
    .then(res => res.json())
    .then(data => {
      if (!data.loggedIn) {
        window.location.href = '/login';
      }
    });
</script>
