<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Room - <%= hotel.property_name %> | Luxora</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-blue-600">Luxora</a>
      <nav class="space-x-4">
        <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
        <a href="/hotels" class="text-blue-600 font-semibold">Hotels</a>
        <a href="/about" class="text-gray-700 hover:text-blue-600">About</a>
        <a href="/contact" class="text-gray-700 hover:text-blue-600">Contact</a>
        <% if (typeof username !== 'undefined' && username) { %>
          <a href="/logout" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Logout</a>
        <% } else { %>
          <a href="/login" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Login</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- Page Content -->
  <main class="max-w-7xl mx-auto px-6 py-12 grid md:grid-cols-3 gap-8">

    <!-- Left: Hotel & Room Info -->
    <div class="md:col-span-2 space-y-6">
      <!-- Hotel Info -->
      <section class="relative h-72 md:h-96 overflow-hidden rounded-lg shadow">
        <img src="<%= hotel.image_url %>" class="absolute inset-0 w-full h-full object-cover">
        <div class="absolute inset-0 bg-black/50 flex flex-col justify-center items-center text-white text-center p-4">
          <h1 class="text-3xl md:text-5xl font-bold drop-shadow-lg"><%= hotel.property_name %></h1>
          <p class="mt-2 text-lg md:text-2xl font-light"><%= hotel.city %></p>
        </div>
      </section>

      <!-- Room Gallery -->
      <section>
        <h2 class="text-xl font-semibold mb-4">Room Gallery</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <% gallery.forEach(img => { %>
            <img src="<%= img.image_room_url %>" alt="Room image" class="rounded-lg w-full h-40 object-cover">
          <% }) %>
        </div>
      </section>

      <!-- Room Details -->
      <section>
        <h2 class="text-xl font-semibold mb-4">Room Details</h2>
        <p class="text-gray-600 mb-2"><strong>Type:</strong> <%= room.type %></p>
        <p class="text-gray-600 mb-2"><strong>Description:</strong> <%= room.description %></p>
        <p class="text-gray-600 mb-2"><strong>Amenities:</strong> <%= amenities.join(", ") %></p>
        <p class="text-gray-600 mb-2"><strong>Max Guests:</strong> <%= room.max_guest %></p>
        <p class="text-gray-600 mb-2" id="checkIN"><strong>Check-in:</strong> <%= room.check_in %> </p>
        <p class="text-gray-600 mb-2" id="checkOUT"><strong>Check-out:</strong><%= room.check_out %></p>
      </section>
    </div>

    <!-- Right: Booking Form -->
    <div class="bg-white shadow rounded-lg p-6 space-y-6">
      <h2 class="text-xl font-semibold mb-4">Booking Summary</h2>
      
      <div class="space-y-2">
        <p><strong>Room:</strong> <%= room.type %></p>
        <p><strong>Price for night:</strong> $<%= room.price_per_night  %></p>
      </div>

      <!-- Guest Info -->
      <form action="/hotels/<%= hotel.property_id %>/booking/<%= room.room_id %>/confirm" method="POST" class="space-y-4">
        <h3 class="text-lg font-semibold">Guest Information</h3>
        <input type="text" name="name" placeholder="Full Name" value="<%= user.name %>" required class="w-full border rounded-lg px-3 py-2">
        <input type="email" name="email" placeholder="Email" value="<%= user.email %>" required class="w-full border rounded-lg px-3 py-2">
        <input type="text" name="numGuests" placeholder="max Guests : <%= room.max_guest %>  " required class="w-full border rounded-lg px-3 py-2">
        <input type="tel" name="phone" placeholder="Phone Number" class="w-full border rounded-lg px-3 py-2">
        <textarea name="requests" placeholder="Special requests (optional)" class="w-full border rounded-lg px-3 py-2"></textarea>

        <!-- Payment Method -->
        <h3 class="text-lg font-semibold">Payment Method</h3>
        <select name="payment_method" required class="w-full border rounded-lg px-3 py-2" id="payment_method">
          <option value="">Select a payment method</option>
          <option value="Credit Card">Credit Card</option>
          <option value="PayPal">PayPal</option>
          <option value="Bank Transfer">Bank Transfer</option>
          <option value="Cash">Pay at Hotel</option>
        </select>

        <div id="payment_details" class="mt-4"></div>

        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 font-semibold">
          Confirm Booking
        </button>
      </form>

      <a href="/hotels/<%= hotel.id %>" class="block text-center text-gray-600 hover:underline mt-4">← Back to Hotel</a>
    </div>

  </main>

</body>

<script>
  const payment_method = document.querySelector('#payment_method');
  const payment_details = document.querySelector('#payment_details');

  payment_method.addEventListener('change', function () {
    payment_details.innerHTML = ''; // clear previous inputs

    if (this.value === 'Credit Card') {
      const creditInput = document.createElement('input');
      creditInput.type = 'text';
      creditInput.name = 'credit_card_number';
      creditInput.placeholder = 'Enter Credit Card Number';
      creditInput.className = 'w-full border rounded-lg px-3 py-2';
      creditInput.required=true
      payment_details.appendChild(creditInput);
    }

    else if (this.value === 'PayPal') {
      const paypalInput = document.createElement('input');
      paypalInput.type = 'email';
      paypalInput.name = 'paypal_email';
      paypalInput.placeholder = 'Enter PayPal Email';
      paypalInput.className = 'w-full border rounded-lg px-3 py-2';
      paypalInput.required=true
      payment_details.appendChild(paypalInput);
    }

    else if (this.value === 'Bank Transfer') {
      const bankInput = document.createElement('input');
      bankInput.type = 'text';
      bankInput.name = 'bank_account_number';
      bankInput.placeholder = 'Enter Bank Account Number';
      bankInput.className = 'w-full border rounded-lg px-3 py-2';
      bankInput.required=true
      payment_details.appendChild(bankInput);
    }
  });
     
  
    // ✅ Format check-in & check-out dates
  function formatDate(rawText) {
    const dateObj = new Date(rawText);
    if (isNaN(dateObj)) return rawText; // fallback if invalid
    const options = { year: 'numeric', month: 'short', day: 'numeric' };
    return dateObj.toLocaleDateString('en-US', options);
  }

  const checkIN = document.querySelector('#checkIN');
  const checkOUT = document.querySelector('#checkOUT');

  if (checkIN) {
    let rawIn = checkIN.textContent.replace("Check-in:", "").trim();
    checkIN.innerHTML = `<strong>Check-in:</strong> ${formatDate(rawIn)}`;
  }

  if (checkOUT) {
    let rawOut = checkOUT.textContent.replace("Check-out:", "").trim();
    checkOUT.innerHTML = `<strong>Check-out:</strong> ${formatDate(rawOut)}`;
  }
     
  

</script>

</html>
