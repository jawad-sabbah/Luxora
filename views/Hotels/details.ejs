<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= hotel.name %> - Luxora</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-blue-600">Luxora</a>
      <nav>
        <a href="/" class="mx-3 text-gray-700 hover:text-blue-600">Home</a>
        <a href="/hotels" class="mx-3 text-blue-600 font-semibold">Hotels</a>
        <a href="/about" class="mx-3 text-gray-700 hover:text-blue-600">About</a>
        <a href="/contact" class="mx-3 text-gray-700 hover:text-blue-600">Contact</a>
        <a href="/login" class="mx-3 text-gray-700 hover:text-blue-600">Login</a>
      </nav>
    </div>
  </header>

  <!-- Hero Banner -->
  <section class="relative w-full h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden">
    <img src="<%= hotel.banner %>" alt="<%= hotel.name %>" class="absolute inset-0 w-full h-full object-cover object-center">
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4">
      <h1 class="text-3xl md:text-5xl font-bold drop-shadow-lg"><%= hotel.name %></h1>
      <p class="mt-3 text-lg md:text-2xl font-light"><%= hotel.location %></p>
    </div>
  </section>

  <!-- Hotel Info -->
  <section class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid md:grid-cols-3 gap-8">

      <!-- Left: Description & Rooms -->
      <div class="md:col-span-2">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">About this hotel</h2>
        <p class="text-gray-600 mb-6"><%= hotel.description %></p>

        <!-- Gallery -->
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Gallery</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
          <% hotel.gallery.forEach(img => { %>
            <img src="<%= img %>" class="rounded-lg w-full h-40 object-cover" alt="Gallery image">
          <% }) %>
        </div>

        <!-- Rooms -->
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Available Rooms</h3>
        <div class="space-y-6">
          <% hotel.rooms.forEach(room => { %>
            <div class="bg-white shadow rounded-lg p-5 flex flex-col md:flex-row justify-between items-center">
              <div class="mb-3 md:mb-0">
                <h4 class="text-lg font-bold text-gray-800"><%= room.type %></h4>
                <p class="text-gray-600 text-sm"><%= room.amenities.join(", ") %></p>
              </div>
              <div class="text-center md:text-right">
                <p class="text-blue-600 font-bold text-lg">$<%= room.price %> / night</p>
                <a href="/hotels/<%= hotel.id %>/booking/<%= room.id %>" 
                   class="mt-2 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                  Book Now
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Right: Quick Info -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Hotel Info</h3>
        <p><span class="font-semibold">üìç Location:</span> <%= hotel.location %></p>
        <p><span class="font-semibold">‚≠ê Rating:</span> <%= hotel.rating %>/5</p>
        <p><span class="font-semibold">üïí Check-in:</span> 2:00 PM</p>
        <p><span class="font-semibold">üïí Check-out:</span> 12:00 PM</p>
      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white shadow mt-auto">
    <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-500 text-sm">
      ¬© <%= new Date().getFullYear() %> Luxora. All rights reserved.
    </div>
  </footer>

</body>
</html>
