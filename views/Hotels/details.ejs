<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= hotel.name %> | Luxora</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-blue-600">Luxora</a>
      <nav>
        <a href="/" class="mx-3 text-gray-700 hover:text-blue-600">Home</a>
        <a href="/hotels" class="mx-3 text-blue-600 font-semibold">Hotels</a>
        <a href="/about" class="mx-3 text-gray-700 hover:text-blue-600">About</a>
        <a href="/contact" class="mx-3 text-gray-700 hover:text-blue-600">Contact</a>
        <a href="/login" class="mx-3 text-gray-700 hover:text-blue-600">Login</a>
      </nav>
    </div>
  </header>

  <!-- Hero Banner -->
  <section class="relative w-full h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden">
    <img src="<%= hotel.image_url %>" class="absolute inset-0 w-full h-full object-cover object-center">
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4">
      <h1 class="text-3xl md:text-5xl font-bold drop-shadow-lg"><%= hotel.property_name %></h1>
      <p class="mt-3 text-lg md:text-2xl font-light"><%= hotel.city %></p>
    </div>
  </section>

  <!-- Hotel Info & Rooms -->
  <section class="max-w-7xl mx-auto px-6 py-12 grid md:grid-cols-3 gap-8">

    <!-- Left Column: Description & Rooms -->
    <div class="md:col-span-2 space-y-6">
     

      <!-- Rooms -->
      <div>
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Available Rooms</h3>
        <div class="space-y-6">
          <% rooms.forEach(room => { %>
            <div class="bg-white shadow rounded-lg p-5 flex flex-col md:flex-row justify-between items-center">
              <div class="mb-3 md:mb-0">
                <h4 class="text-lg font-bold text-gray-800"><%= room.type %></h4>
                <p class="text-gray-600 text-sm">
                  <%= room.amenities && room.amenities.length ? room.amenities.join(", ") : "No amenities listed" %>
                </p>
              </div>
              <div class="text-center md:text-right">
                <p class="text-blue-600 font-bold text-lg">$<%= room.price_per_night %> / night</p>
                <a href="/hotels/<%= hotel.id %>/booking/<%= room.room_id %>" 
                   class="mt-2 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                  Book Now
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Right Column: Quick Info -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Hotel Info</h3>
      <p><span class="font-semibold"> Location:</span> <%= hotel.address %></p>
      <p><span class="font-semibold">Check-in && Check-out : </span>depend on each room reservation</p>
    </div>

  </section>

  <!-- Footer -->
  <footer class="bg-white shadow mt-auto">
    <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-500 text-sm">
      Â© <%= new Date().getFullYear() %> Luxora. All rights reserved.
    </div>
  </footer>

</body>
</html>
