<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pending Host Requests - Luxora</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex">

  <!-- Sidebar -->
  <aside class="w-64 bg-white shadow-lg min-h-screen flex flex-col">
    <div class="p-6 text-center font-bold text-xl text-blue-600 border-b">
      Luxora Admin
    </div>
    <nav class="flex-1 px-4 py-6 space-y-2">
      <a href="/admin/dashboard" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Dashboard</a>
      <a href="/admin/users" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Users</a>
      <a href="/admin/hosts" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Hosts</a>
      <a href="/admin/hostsRequests" class="block px-4 py-2 rounded bg-blue-100 font-semibold text-blue-600">Host Requests</a>
      <a href="/admin/properties" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Properties</a>
      <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Bookings</a>
      <a href="/logout" class="block px-4 py-2 rounded hover:bg-red-100 text-red-600 font-semibold">Logout</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-6">
    <h1 class="text-2xl font-bold mb-6">Pending Host Requests</h1>

    <div class="bg-white shadow rounded-lg p-6">
      <table class="min-w-full border divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-gray-600">ID</th>
            <th class="px-4 py-2 text-left text-gray-600">Name</th>
            <th class="px-4 py-2 text-left text-gray-600">Email</th>
            <th class="px-4 py-2 text-left text-gray-600">Payout Email</th>
            <th class="px-4 py-2 text-left text-gray-600">Bank Account</th>
            <th class="px-4 py-2 text-left text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% if (hosts && hosts.length > 0) { %>
            <% hosts.forEach(host => { %>
              <tr>
                <td class="px-4 py-2"><%= host.host_id %></td>
                <td class="px-4 py-2"><%= host.name %></td>
                <td class="px-4 py-2"><%= host.email %></td>
                <td class="px-4 py-2"><%= host.payout_email || "N/A" %></td>
                <td class="px-4 py-2"><%= host.bank_account || "N/A" %></td>
                <td class="px-4 py-2 space-x-2">
                  <form action="/admin/hosts/<%= host.host_id %>/verify" method="POST" class="inline">
                    <button type="submit" class="px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700">Verify</button>
                  </form>
                  <form action="/admin/hosts/<%= host.host_id %>/delete" method="POST" class="inline">
                    <button type="submit" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center py-4 text-gray-500">No pending host requests</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
