<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify Hosts - Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">

  <!-- Back Button -->
  <div class="mb-6">
    <a href="/admin/dashboard" 
       class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
      ‚Üê Back to Dashboard
    </a>
  </div>

  <!-- Page Title -->
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Pending Host Verifications</h1>

  <!-- Hosts Table -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Hosts List</h2>
    <table class="min-w-full border border-gray-200 divide-y divide-gray-200 rounded-lg overflow-hidden">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-gray-600">ID</th>
          <th class="px-4 py-2 text-left text-gray-600">Name</th>
          <th class="px-4 py-2 text-left text-gray-600">Email</th>
          <th class="px-4 py-2 text-left text-gray-600">Payout Email</th>
          <th class="px-4 py-2 text-left text-gray-600">Bank Account</th>
          <th class="px-4 py-2 text-left text-gray-600">Status</th>
          <th class="px-4 py-2 text-left text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% hosts.forEach(host => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-2"><%= host.id %></td>
            <td class="px-4 py-2"><%= host.name %></td>
            <td class="px-4 py-2"><%= host.email %></td>
            <td class="px-4 py-2"><%= host.payout_email %></td>
            <td class="px-4 py-2"><%= host.bank_account %></td>
            <td class="px-4 py-2">
              <% if (host.is_verified) { %>
                <span class="px-2 py-1 text-sm rounded bg-green-100 text-green-700 font-medium">Verified</span>
              <% } else { %>
                <span class="px-2 py-1 text-sm rounded bg-yellow-100 text-yellow-700 font-medium">Pending</span>
              <% } %>
            </td>
            <td class="px-4 py-2 space-x-2">
              <a href="/admin/hosts/<%= host.id %>/verify/confirm" 
                 class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700">Verify</a>
              <a href="/admin/hosts/<%= host.id %>/delete" 
              onclick="return confirm('Are you sure you want to delete host <%= host.name %>? This action cannot be undone.');"
              class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">
              Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
