<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View User - Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">

  <!-- Back Button -->
  <a href="/admin/users" class="inline-block mb-4 text-blue-600 hover:underline">‚Üê Back to Users</a>

  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">User Details</h1>

    <div class="space-y-4">
      <!-- User ID -->
      <div>
        <label class="block text-gray-700 font-medium">User ID</label>
        <p class="px-4 py-2 border rounded bg-gray-100"><%= user.id %></p>
      </div>

      <!-- Name -->
      <div>
        <label class="block text-gray-700 font-medium">Name</label>
        <p class="px-4 py-2 border rounded bg-gray-50"><%= user.name %></p>
      </div>

      <!-- Email -->
      <div>
        <label class="block text-gray-700 font-medium">Email</label>
        <p class="px-4 py-2 border rounded bg-gray-50"><%= user.email %></p>
      </div>

      <!-- Role -->
      <div>
        <label class="block text-gray-700 font-medium">Role</label>
        <p class="px-4 py-2 border rounded bg-gray-50"><%= user.role %></p>
      </div>

      <!-- Status -->
      <div>
        <label class="block text-gray-700 font-medium">Status</label>
        <p class="px-4 py-2 border rounded 
           <%= user.status === 'active' ? 'text-green-600' 
              : user.status === 'inactive' ? 'text-yellow-600' 
              : 'text-red-600' %>">
          <%= user.status %>
        </p>
      </div>


    <!-- Back Button -->
    <div class="mt-6 flex justify-end">
      <a href="/admin/users" 
         class="px-6 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
        Back
      </a>
    </div>
  </div>

</body>
</html>
