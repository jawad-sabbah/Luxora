<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hosts - Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">

  <!-- Sidebar -->
  <aside class="w-64 bg-white shadow-lg flex flex-col">
    <div class="p-6 text-center font-bold text-xl text-blue-600 border-b">
      Luxora Admin
    </div>
    <nav class="flex-1 px-4 py-6 space-y-2">
      <a href="/admin/dashboard" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Dashboard</a>
      <a href="/admin/users" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Users</a>
      <a href="/admin/hosts" class="block px-4 py-2 rounded hover:bg-blue-100 font-semibold text-blue-600">Hosts</a>
       <a href="/admin/hostsRequests" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Hosts request</a>
      <a href="/admin/properties" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Properties</a>
      <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-blue-100 text-gray-700">Bookings</a>
      <a href="/logout" class="block px-4 py-2 rounded hover:bg-red-100 text-red-600 font-semibold">Logout</a>
    </nav>
  </aside>

  <!-- Main Content -->

  <main class="flex-1 p-8">
   
       <a href="/" class="inline-flex items-center text-gray-600 hover:text-blue-600 mb-4">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0L3.586 10l4.707-4.707a1 1 0 011.414 1.414L6.414 10l3.293 3.293a1 1 0 010 1.414z" clip-rule="evenodd" />
  </svg>
  Back to Home
</a>

<form action="/admin/hosts" method="get" class="mb-6 flex">
  <input type="text" name="search" value="<%= search %>"
         placeholder="Search by name, email or ID"
         class="w-full p-2 border rounded-l-lg focus:ring focus:ring-blue-300 ">
  <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-r-lg hover:bg-blue-700">
    Search
  </button>
   <% if (search) { %>
    <a href="/admin/hosts" class="px-4 py-2 bg-gray-300 text-gray-800 rounded">
      Clear
    </a>
   <% } %>
</form>

    <h1 class="text-3xl font-bold text-gray-800 mb-6">All Hosts</h1>

    <div class="bg-white shadow rounded-lg p-6">
      <table class="min-w-full border divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-gray-600">ID</th>
            <th class="px-4 py-2 text-left text-gray-600">Name</th>
            <th class="px-4 py-2 text-left text-gray-600">Email</th>
            <th class="px-4 py-2 text-left text-gray-600">Payout Email</th>
            <th class="px-4 py-2 text-left text-gray-600">Bank Account</th>
            <th class="px-4 py-2 text-left text-gray-600">Phone Number</th>
            <th class="px-4 py-2 text-left text-gray-600">Verified</th>
            <th class="px-4 py-2 text-left text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% hosts.forEach(host => { %>
            <tr>
              <td class="px-4 py-2"><%= host.host_id %></td>
              <td class="px-4 py-2"><%= host.name %></td>
              <td class="px-4 py-2"><%= host.email %></td>
              <td class="px-4 py-2"><%= host.payout_email %></td>
              <td class="px-4 py-2"><%= host.bank_account %></td>
              <td class="px-4 py-2"><%= host.phone_number %></td>
              <td class="px-4 py-2">
                <% if (host.verified) { %>
                  <span class="text-green-600 font-semibold">Verified</span>
                <% } else { %>
                  <span class="text-yellow-600 font-semibold">Pending</span>
                <% } %>
              </td>
              <td class="px-4 py-2 space-x-2">  
                <a href="/admin/hosts/edit/<%= host.host_id %>" class="text-yellow-600 hover:underline">Edit</a>
              <form action="/admin/hosts/block/<%= host.host_id %>" method="POST" style="display:inline;">
              <button type="submit" class="text-red-600 hover:underline">Block</button>
              </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
